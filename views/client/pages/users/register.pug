extends ../../layouts/default.pug

block main 
  .container.my-3
    form(
      action="/user/register"
      method="POST"
    )
      div(class="form-group")
        label(for="fullName") Họ và tên *
        input(
          type="text"
          class="form-control"
          id="fullName"
          name="fullName"
          placeholder="Nhập tên của bạn"
        )
      div(class="form-group")
        label(for="exampleInputEmail1") Email
        input#exampleInputEmail1(type="email", class="form-control", aria-describedby="emailHelp", placeholder="Nhập email" name="email")
      div(class="form-group")
        label(for="exampleInputPassword1") Mật khẩu
        input#exampleInputPassword1(type="password", class="form-control", placeholder="Nhập mật khẩu" name="password")
      button(type="submit", class="btn btn-primary") Đăng ký
